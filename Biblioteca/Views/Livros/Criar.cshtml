@model LivrosModel
@{
    ViewData["Title"] = "Criar livro";
}

<div class="text-center">

    <form asp-controller="Livros" asp-action="Criar" method="post">

        <div class="form-group m-1">
            <label for="nome">Nome do Livro</label>
            <input asp-for="Nome" class="form-control" rows="1" placeholder="Digite o nome do Livro"></input>
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group m-1">
            <label for="descicao">Autor do Livro</label>
            <textarea asp-for="Autor" class="form-control" rows="3" placeholder="Digite o Autor do Livro"></textarea>
            @Html.ValidationMessageFor(x => x.Autor)
        </div>
        <div class="form-group">
            <label for="data" class="m-3">Numero de Paginas</label>
            <textarea asp-for="NumeroDePaginas" class="form-control" rows="3" placeholder="Numero de paginas"></textarea>
            @Html.ValidationMessageFor(x => x.NumeroDePaginas)
        </div>
        <div class="form-group m-1">
            <label for="descicao">Sinopse</label>
            <textarea asp-for="Sinopse" class="form-control" rows="3" placeholder="Digite a Sinopse"></textarea>
            @Html.ValidationMessageFor(x => x.Sinopse)
        </div>
        <div class="form-group">
            <label for="status" class="m-3" not-required>Status</label>
            <textarea asp-for="Status" class="form-control" rows="3" placeholder="Status"></textarea>
            @Html.ValidationMessageFor(x => x.Status)
        </div>

        <button type="submit" class="btn btn-primary m-1">Criar</button>
        <a class="btn btn-secondary m-1" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>

    </form>


</div>