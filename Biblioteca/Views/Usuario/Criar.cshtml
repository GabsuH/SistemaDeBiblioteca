@model UsuarioModel
@{
    ViewData["Title"] = "Criar Usuario";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">

    <form asp-controller="Usuario" asp-action="Criar" method="post">

        <div class="form-group m-1">
            <label for="nome">Nome do Usuário</label>
            <input asp-for="Nome" class="form-control" rows="1" placeholder="Digite o nome do Usuário"></input>
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group m-1">
            <label for="descicao">CPF do Usuário</label>
            <textarea asp-for="CPF" class="form-control" rows="3" placeholder="Digite o CPF do usuário"></textarea>
            @Html.ValidationMessageFor(x => x.CPF)
        </div>
        <div class="form-group">
            <label for="data" class="m-3">Data de Nascimento</label>
            <input asp-for="DataDeNascimento" type="date" />
            @Html.ValidationMessageFor(x => x.DataDeNascimento)
        </div>
        <div class="form-group m-1">
            <label for="descicao">Email do Usuário</label>
            <textarea asp-for="Email" class="form-control" rows="3" placeholder="Digite o Email do usuário"></textarea>
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group m-1">
            <label for="descicao">Telefone do Usuário</label>
            <textarea asp-for="Telefone" class="form-control" rows="3" placeholder="Digite o Telefone do usuário"></textarea>
            @Html.ValidationMessageFor(x => x.Telefone)
        </div>

        <button type="submit" class="btn btn-primary m-1">Criar</button>
        <a class="btn btn-secondary m-1" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>

    </form>


</div>